@model BooklyProjectNew.Entities.Testimonial
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Müşteri Yorumu Ekle</h3>

<form method="post">
    <label>İsim</label>
    <input type="text" name="Name" class="form-control" required />
    <br />
    <label>Yorum</label>
    <input type="text" name="Comment" class="form-control" required />
    <br />
    <label>Puan</label>
    <input type="number" name="Review" class="form-control" required />
    <br />
    <button class="btn btn-outline-dark"><i class="fa fa-save"></i> Kaydet</button>
</form>

