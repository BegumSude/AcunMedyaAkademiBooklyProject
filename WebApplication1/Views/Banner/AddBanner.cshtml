@model BooklyProjectNew.Entities.Banner
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Öne Çıkan Ekle</h3>

<form method="post">
    <label>Kitap İsmi</label>
    <input type="text" name="Title" class="form-control" required />
    <br />
    <label>Tanım</label>
    <input type="text" name="Description" class="form-control" required />
    <br />
    <label>Görsel Url</label>
    <input type="text" name="ImageUrl" class="form-control" required />
    <br />
    <button class="btn btn-outline-dark"><i class="fa fa-save"></i> Kaydet</button>
</form>

