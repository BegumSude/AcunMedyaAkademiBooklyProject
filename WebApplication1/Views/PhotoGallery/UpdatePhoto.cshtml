@model BooklyProjectNew.Entities.PhotoGallery
@{
    ViewBag.Title = "UpdatePhoto";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Fotoğraf Güncelleme Sayfası</h3>

<form method="post">
    <input type="hidden" name="@Model.PhotoGalleryId"/>
    <label>Fotoğraf Url</label>
    <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" required/>
    <br />
    <button class="btn btn-outline-dark"><i class="fa fa-save"></i>Kaydet</button>
</form>

